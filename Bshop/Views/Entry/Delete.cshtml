@model Bshop.Models.EntryModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Удаление записи</h1>

<h3>Вы уверены что хотите отменить запись?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Id клиента
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.clientid)
        </dd>
        <dt class = "col-sm-2">
            Id мастера
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.masterid)
        </dd>
        <dt class = "col-sm-2">
            Id услуги
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.serviceid)
        </dd>
        <dt class = "col-sm-2">
            Дата и время
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.time)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться</a>
    </form>
</div>
