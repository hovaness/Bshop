<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bshop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Bshop.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm  bg-black border-bottom box-shadow mb-3 d-flex ">
            <div class="container-fluid col-9">
                <a class="text-white navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BShop</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 align-items-center">
                       @* <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Master" asp-action="Show">Мастера</a>
                        </li>*@
                        <li class="nav-tem">
                            <a class="nav-link text-white" asp-controller="Service" asp-action="Show">Записаться онлайн</a>
                        </li>
                        <li>
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Privacy">Админка</a>
                        </li>
                    </ul>
                    @* <a class="nav-link text-white" asp-area="" asp-controller="" asp-action="">Войти</a>*@
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Bshop - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
