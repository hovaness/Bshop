@model Bshop.Models.ClientModel
@{
    ViewData["Title"] = "Регистрация";
}
<div class="row m-mx-5 justify-content-center">
    <p class="mt-5"></p>
    <h2 class="text-center">Регистрация</h2>
    <div class="col-md-6 ">
        <form asp-action="Register">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="name" class="control-label" >Имя</label>
                <input asp-for="name" class="form-control"  />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="number" poster="Имя" class="control-label">Номер телефона</label>
                <input asp-for="number" class="form-control"  />
                <span asp-validation-for="number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="password" class="control-label">Введите пароль</label>
                <input asp-for="password" class="form-control"   />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
           @* <div class="form-group mb-2">
                <label asp-for="passwordConfirm" class="control-label">Повторите пароль</label>
                <input asp-for="passwordConfirm" class="form-control"   />
                <span asp-validation-for="passwordConfirm" class="text-danger"></span>
            </div>*@
            <div class="form-group mt-2 text-center mb-2 mt-2">
                <input type="submit" value="Зарегистрироваться" class="btn btn-primary text-center" />
            </div>
        </form>
    </div>
    <a asp-action="Authorize" class="text-decoration-underline text-dark mt-2 text-center fs-5">Уже зарегистрированы? Войти!</a>
</div>